Public Sub flex_data()
On Error Resume Next
Dim fldata As New ADODB.Recordset
If fldata.State Then fldata.Close
fldata.Open "select a.of_id,a.empno,a.empname,a.classification,a.dateonboard,a.dateoffboard,a.reason,a.traveltime,a.notes from offboard a,onboard b where a.empno=b.ob_empno and b.location='" & main.lbllocation.Caption & "' order by a.dateoffboard,a.empname", Cn, 3, 2

With flex_grid
    .Rows = 1
    While Not fldata.EOF
        .Rows = .Rows + 1
        .TextMatrix(.Rows - 1, 0) = fldata(0)
        .TextMatrix(.Rows - 1, 1) = fldata(1)
        .TextMatrix(.Rows - 1, 2) = fldata(2)
        .TextMatrix(.Rows - 1, 3) = fldata(3)
        .TextMatrix(.Rows - 1, 4) = fldata(4)
        .TextMatrix(.Rows - 1, 5) = fldata(5)
        .TextMatrix(.Rows - 1, 6) = fldata(6)
         .TextMatrix(.Rows - 1, 7) = fldata(7)
        fldata.MoveNext
    Wend
End With
End Sub





